/*FluToggleSwitch*/

FluToggleSwitch {
    color: rgb(0, 0, 0);
    font-size: 15px;
    font-weight: 400;
}

FluToggleSwitch::indicator {
    width: 22px;
    height: 22px;
    border-radius: 12px;
    border: 1px solid rgb(130, 130, 130);
    background-color: rgb(237, 237, 237);
    image: url(":/img/ToggleSwitchOff-light.png");
    margin-right: 5px;
    padding-right: 25px;
    padding-left: 0px;
}

FluToggleSwitch::indicator:hover {
    background-color: rgb(229, 229, 229);
    image: url(":/img/ToggleSwitchOffHover-light.png");
}

FluToggleSwitch::indicator:pressed {
    background-color: rgb(220, 220, 220);
    width: 26px;
    padding-right: 21px;
    image: url(":/img/ToggleSwitchOffPressed-light.png");
}

FluToggleSwitch::indicator:checked {
    background-color: rgb(0, 90, 158);
    border: 1px solid rgb(0, 90, 158);
    image: url(":/img/ToggleSwitchOn-light.png");
    color: rgb(255, 255, 255);
    padding-left: 25px;
    padding-right: 0px;
}

FluToggleSwitch::indicator:checked:hover {
    background-color: rgb(25, 106, 167);
    image: url(":/img/ToggleSwitchOnHover-light.png");
}

FluToggleSwitch::indicator:checked:pressed {
    background-color: rgb(44, 116, 170);
    width: 26px;
    padding-left: 21px;
    image: url(":/img/ToggleSwitchOnPressed-light.png");
}

FluToggleSwitch:disabled {
    color: rgba(0, 0, 0, 110);
}

#toggleSwitch::indicator:disabled {
    border: 2px solid #bbbbbb;
    image: url(":/img/ToggleSwitchDisabled-light.png");
}